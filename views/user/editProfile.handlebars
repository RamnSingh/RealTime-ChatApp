<div class="container-tight">
{{#if success_msg}}
    <div class="alert alert-success">{{success_msg}}</div>
{{/if}}
{{#if error}}
    <div class="alert alert-danger">{{error}}</div>
{{/if}}
<form action="/user/profile/edit/{{user.username}}" enctype="multipart/form-data" method="POST" />
<div class="card">
  <h3 class="card-header">Profile {{user.username}}</h3>
  <div class="card-block">
    <div class="row">
    <div class="col-4">
      {{#if user.profileImage}}
      <img src="/profile/image/{{user.profileImage}}" width="200px" height="200px" class="img-thumbnail">
      <button class="file-upload btn btn-info">            
            <input type="file" accept=".jpg,.jpeg,.png" name="profileImage" class="file-input">Change profile picture
      </button>
      {{else}}
      <button class="file-upload btn btn-info">            
            <input type="file" accept=".jpg,.jpeg,.png" name="profileImage" class="file-input">Add a profile picture
      </button>

      {{/if}}
    </div>
    <div class="col-8">
      <div class="row">
        <div class="col form-group">
          <label>Username</label>
          <input type="text" disabled="disabled" class="form-control" name="username" value="{{user.username}}" />
        </div>
        <div class="col form-group">
          <label>Fullname</label>
          <input type="text" class="form-control" name="fullName" value="{{user.fullName}}" />
        </div>
      </div>
      <div class="row">
        <div class="col form-group">
          <label>Date of birth</label>
          <input type="date" class="form-control" name="dateOfBirth" value="{{user.dateOfBirth}}" />
        </div>
        <div class="col form-group">
          <label>From</label>
          <input type="text" class="form-control" name="location" value="{{user.location}}" />
        </div>
      </div>
      <div class="row">
        <div class="col form-group">
           <label>About {{user.username}}</label>
           <textarea name="aboutMe" class="form-control">{{user.aboutMe}}</textarea>
        </div>
      </div>
    </div>
  </div>
  </div>
  <div class="card-footer">
      <div class="row justify-content-end">
          <button type="submit" class="btn btn-primary">Update</button>
      </div>
  </div>
</div>

    </form>
    </div>